<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/dark_grey3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/percentage_text_view"
        android:text="@string/percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/intruder_text_size"
        android:textColor="@color/light_grey"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/intruder_detected_text_view"
        android:text="@string/intruder_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/intruder_text_size"
        android:textColor="@color/light_grey"
        android:layout_toLeftOf="@id/percentage_text_view"/>

    <Button
        android:id="@+id/shutdown_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_background_list"
        android:text="@string/shutdown"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/light_grey"/>
</RelativeLayout>
